{
  "name": "web3-signer-frontend",
  "version": "1.0.0",
  "description": "Frontend React app for Web3 Message Signer & Verifier",
  "type": "module",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js --host 0.0.0.0 --port 3000 --force",
    "dev:clean": "rm -rf node_modules/.vite && npm run dev",
    "dev:custom": "node run-vite.mjs",
    "dev:static": "node dev-server.cjs",
    "build": "node ./node_modules/vite/bin/vite.js build",
    "preview": "node ./node_modules/vite/bin/vite.js preview",
    "test": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "browserslist": "^4.25.3",
    "caniuse-lite": "^1.0.30001737",
    "ethers": "^6.8.1",
    "express": "^5.1.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "serve-static": "^2.2.0",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  }
}
